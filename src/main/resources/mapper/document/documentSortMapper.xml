<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core136.mapper.document.DocumentSortMapper">
	<resultMap id="DocumentSort" type="com.core136.bean.document.DocumentSort">
		<id column="ID" property="id" jdbcType="BIGINT" />
		<result column="SORT_ID" property="sortId" jdbcType="VARCHAR" />
		<result column="SORT_NO" property="sortNo" jdbcType="INTEGER" />
		<result column="SORT_NAME" property="sortName" jdbcType="VARCHAR" />
		<result column="MANAGE_ACCOUNT_ID" property="manageAccountId" jdbcType="VARCHAR" />
		<result column="LEVEL_ID" property="leveLId" jdbcType="VARCHAR" />
		<result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
		<result column="CREATE_USER" property="createUser" jdbcType="VARCHAR" />
		<result column="ORG_ID" property="orgId" jdbcType="VARCHAR" />
	</resultMap>

	<select id="getDocumentSortTree" resultType="java.util.HashMap">
		SELECT SORT_ID as sortId, SORT_NAME as sortName,
		CASE WHEN (SELECT COUNT(1) FROM DOCUMENT_SORT TMP WHERE TMP.LEVEL_ID=sortId)=0 then 'false' else 'true' END
		AS  isParent
		FROM DOCUMENT_SORT WHERE LEVEL_ID=#{levelId} AND ORG_ID=#{orgId}
	</select>
	
	
	<select id="getDocumentFormSortTree" resultType="java.util.HashMap">
		SELECT BPM_SORT_ID as sortId, SORT_NAME as sortName,
		'true' AS  isParent 
		FROM DOCUMENT_SORT WHERE 
		LEVEL_ID=#{levelId}
	</select>

</mapper>

