<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core136.mapper.document.DocumentNumberMapper">
	<resultMap id="DocumentNumber" type="com.core136.bean.document.DocumentNumber">
		<id column="ID" property="id" jdbcType="BIGINT" />
		<result column="SORT_NO" property="sortNo" jdbcType="INTEGER" />
		<result column="CONFIG_ID" property="configId" jdbcType="VARCHAR" />
		<result column="TITLE" property="title" jdbcType="VARCHAR" />
		<result column="RULE" property="rule" jdbcType="VARCHAR" />
		<result column="START_NUMBER" property="startNumber" jdbcType="INTEGER" />
		<result column="NUMBER" property="number" jdbcType="INTEGER" />
		<result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
		<result column="CREATE_USER" property="createUser" jdbcType="VARCHAR" />
		<result column="ORG_ID" property="orgId" jdbcType="VARCHAR" />
	</resultMap>

	<select id="getDocumentNumberList" resultType="java.util.HashMap">
		SELECT N.CONFIG_ID AS configId,N.TITLE AS title,N.RULE AS rule,N.START_NUMBER AS startNumber,N.NUMBER AS number 
		FROM
			DOCUMENT_NUMBER N
		WHERE N.ORG_ID=#{orgId}
		<if test="search !='%%'.toString() and search !=''.toString() and search!=null">
			AND N.TITLE LIKE #{search}
		</if>
	</select>
	<select id="getDocumentNumberListForSelect" resultType="java.util.HashMap">
		SELECT N.CONFIG_ID AS configId,N.TITLE AS title
		FROM
		DOCUMENT_NUMBER N
		WHERE N.ORG_ID=#{orgId} ORDER BY N.SORT_NO ASC
	</select>

</mapper>

