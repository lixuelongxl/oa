<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core136.mapper.bpm.BpmSortMapper">
	<resultMap id="bpmSort" type="com.core136.bean.bpm.BpmSort">
		<id column="ID" property="id" jdbcType="BIGINT" />
		<result column="BPM_SORT_ID" property="bpmSortId" jdbcType="VARCHAR" />
		<result column="BPM_SORT_NAME" property="bpmSortName" jdbcType="VARCHAR" />
		<result column="MANAGE_ACCOUNT_ID" property="manageAccountId" jdbcType="VARCHAR" />
		<result column="LEVEL_ID" property="leveLId" jdbcType="VARCHAR" />
		<result column="SORT_NO" property="sortNo" jdbcType="INTEGER" />
		<result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
		<result column="CREATE_USER" property="createUser" jdbcType="VARCHAR" />
		<result column="ORG_ID" property="orgId" jdbcType="VARCHAR" />
	</resultMap>

	<select id="getBpmSortTree" resultType="java.util.HashMap">
		SELECT BPM_SORT_ID as bpmSortId, BPM_SORT_NAME as bpmSortName,
		CASE WHEN (SELECT COUNT(1) FROM BPM_SORT TMP WHERE TMP.LEVEL_ID=bpmSortId)=0 then 'false' else 'true' END
		AS  isParent
		FROM BPM_SORT WHERE LEVEL_ID=#{levelId} AND ORG_ID=#{orgId}
	</select>
	
	
	<select id="getBpmFormSortTree" resultType="java.util.HashMap">
		SELECT BPM_SORT_ID as bpmSortId, BPM_SORT_NAME as bpmSortName,
		'true' AS  isParent 
		FROM BPM_SORT WHERE 
		LEVEL_ID=#{levelId}
	</select>

</mapper>

