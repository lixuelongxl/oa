<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core136.mapper.bpm.BpmFormVersionMapper">
	<resultMap id="BpmFormVersion" type="com.core136.bean.bpm.BpmFormVersion">
		<id column="ID" property="id" jdbcType="BIGINT" />
		<result column="VERSION_ID" property="versionId" jdbcType="VARCHAR" />
		<result column="TITLE" property="title" jdbcType="VARCHAR" />
		<result column="FORM_ID" property="fromId" jdbcType="VARCHAR" />
		<result column="HTML_CODE" property="htmlCode" jdbcType="VARCHAR" />
		<result column="STYLE" property="style" jdbcType="VARCHAR" />
		<result column="SCRIPT" property="script" jdbcType="VARCHAR" />
		<result column="MOBILE_HTML_CODE" property="mobileHtmlCode" jdbcType="VARCHAR" />
		<result column="MOBILE_SCRIPT" property="mobileScript" jdbcType="VARCHAR" />
		<result column="MOBILE_STYLE" property="mobileStyle" jdbcType="VARCHAR" />
		<result column="REMARK" property="remark" jdbcType="VARCHAR" />
		<result column="CREATE_USER" property="createUser" jdbcType="VARCHAR" />
		<result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
		<result column="ORG_ID" property="orgId" jdbcType="VARCHAR" />
	</resultMap>
	<select id="getBpmFormVersionList" resultType="java.util.HashMap">
		SELECT V.VERSION_ID AS versionId,V.TITLE AS title, F.FORM_ID AS formId,F.FORM_TITLE AS formTitle,F.TABLE_NAME AS tableName,
		V.CREATE_TIME AS createTime,V.CREATE_USER AS createUser,
		(SELECT U.USER_NAME FROM USER_INFO U WHERE U.ORG_ID=#{orgId} AND U.ACCOUNT_ID=V.CREATE_USER) AS createUserName
		FROM BPM_FORM_VERSION V LEFT JOIN BPM_FORM F ON V.ORG_ID=F.ORG_ID AND V.FORM_ID=F.FORM_ID
		WHERE V.ORG_ID=#{orgId}
		AND V.FORM_ID=#{formId}
		<if test="search !='%%' and search !=''.toString() and search!=null">
			AND (F.FORM_TITLE LIKE #{search} OR V.TITLE LIKE #{search})
		</if>
	</select>
</mapper>

