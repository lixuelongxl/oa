<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core136.mapper.oa.LeadActivityMapper">
<resultMap id="LeadActivity" type="com.core136.bean.oa.LeadActivity" >
    <id column="ID" property="id" jdbcType="BIGINT" />
    <result column="RECORD_ID" property="recordId" jdbcType="VARCHAR" />
    <result column="TITLE" property="title" jdbcType="VARCHAR" />
    <result column="LEADER" property="leader" jdbcType="VARCHAR" />
    <result column="BEGIN_TIME" property="beginTime" jdbcType="VARCHAR" />
    <result column="END_TIME" property="endTime" jdbcType="VARCHAR" />
    <result column="USER_PRIV" property="userPriv" jdbcType="VARCHAR" />
    <result column="DEPT_PRIV" property="deptPriv" jdbcType="VARCHAR" />
    <result column="LEVEL_PRIV" property="levelPriv" jdbcType="VARCHAR" />
    <result column="REMARK" property="remark" jdbcType="VARCHAR" />
    <result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
    <result column="CREATE_USEr" property="createUser" jdbcType="VARCHAR" />
    <result column="ORG_ID" property="orgId" jdbcType="VARCHAR" />
  </resultMap>
<select id="getLeadActivityLsit" resultType="java.util.HashMap">
	SELECT RECORD_ID AS recordId,LEADER AS leader,BEGIN_TIME AS beginTime,END_TIME AS endTime,TITLE AS title,
	(SELECT U.USER_NAME FROM USER_INFO U WHERE U.ORG_ID=#{orgId} AND U.ACCOUNT_ID=LEADER) AS leaderUserName
	FROM LEAD_ACTIVITY
	WHERE ORG_ID=#{orgId}
	<if test="beginTime!=''.toString() and beginTime!=null">
		AND BEGIN_TIME &gt;= #{beginTime}
	</if>
	<if test="endTime!=''.toString() and endTime!=null">
		AND BEGIN_TIME = #{endTime}
	</if>
	<if test="leader!=''.toString() and leader!=null">
		AND LEADER = #{leader}
	</if>
	<if test="search !='%%' and search !=''.toString() and search!=null">
		AND TITLE LIKE #{search}
	</if>
</select>


</mapper>

