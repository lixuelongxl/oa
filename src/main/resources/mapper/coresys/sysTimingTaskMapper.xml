<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core136.mapper.sys.SysTimingTaskMapper">
<resultMap id="SysTimingTask" type="com.core136.bean.sys.SysTimingTask" >
    <id column="ID" property="id" jdbcType="BIGINT" />
    <result column="sortNo" property="sortNo" jdbcType="INTEGER" />
    <result column="TASK_ID" property="taskId" jdbcType="VARCHAR" />
    <result column="TASK_NAME" property="taskName" jdbcType="VARCHAR" />
    <result column="RULE" property="rule" jdbcType="VARCHAR" />
    <result column="METHOD" property="method" jdbcType="VARCHAR" />
    <result column="STATUS" property="status" jdbcType="VARCHAR" />
    <result column="REMARK" property="remark" jdbcType="VARCHAR" />
    <result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
    <result column="CREATE_USEr" property="createUser" jdbcType="VARCHAR" />
    <result column="ORG_ID" property="orgId" jdbcType="VARCHAR" />
  </resultMap>
<select id="getSysTimingTaskList" resultType="java.util.HashMap">
	SELECT TASK_ID AS taskId,TASK_NAME AS taskName,RULE AS rule,METHOD AS method,STATUS AS status,CREATE_TIME AS createTime,REMARK AS remark,
	CREATE_USER AS createUser,(SELECT U.USER_NAME FROM USER_INFO U WHERE U.ORG_ID=#{orgId} AND U.ACCOUNT_ID=CREATE_USER) AS createUserName 
	FROM
	SYS_TIMING_TASK 
	WHERE
	ORG_ID=#{orgId}
</select>


</mapper>

