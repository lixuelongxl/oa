<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core136.mapper.sys.SysProfileMapper">
<resultMap id="SysProfile" type="com.core136.bean.sys.SysProfile" >
    <id column="ID" property="id" jdbcType="BIGINT" />
    <result column="sortNo" property="sortNo" jdbcType="INTEGER" />
    <result column="PROFILE_ID" property="profileId" jdbcType="VARCHAR" />
    <result column="TITLE" property="title" jdbcType="VARCHAR" />
    <result column="URL" property="url" jdbcType="VARCHAR" />
    <result column="USER_PRIV" property="userPriv" jdbcType="VARCHAR" />
    <result column="DEPT_PRIV" property="deptPriv" jdbcType="VARCHAR" />
    <result column="LEAVE_PRIV" property="leavePriv" jdbcType="VARCHAR" />
    <result column="STATUS" property="status" jdbcType="VARCHAR" />
    <result column="REMARK" property="remark" jdbcType="VARCHAR" />
    <result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
    <result column="CREATE_USEr" property="createUser" jdbcType="VARCHAR" />
    <result column="ORG_ID" property="orgId" jdbcType="VARCHAR" />
  </resultMap>
<select id="getAllSysProfileList" resultType="java.util.HashMap">
	SELECT PROFILE_ID AS profileId,TITLE AS title,URL AS url,USER_PRIV AS userPriv,DEPT_PRIV AS deptPriv,LEAVE_PRIV AS leavePriv,
	STATUS AS status,REMARK AS remark
	FROM SYS_PROFILE
	WHERE ORG_ID=#{orgId}
</select>

<select id="getMySysProfileList" resultType="java.util.HashMap">
	SELECT PROFILE_ID AS profileId,TITLE AS title,URL AS url
	FROM SYS_PROFILE
	WHERE ORG_ID=#{orgId}
	AND STATUS='1'
	<if test="opFlag!='1'.toString()">
	AND(
		USER_PRIV = '@all'
		OR DEPT_PRIV = '@all'
		OR LEAVE_PRIV = '@all'
		<if test="accountId!=''.toString() and accountId!=null">
		OR FUN_INTE_ARRAY(#{accountId},USER_PRIV) > 0
		</if>
		<if test="deptId!=''.toString() and deptId!=null">
			OR FUN_INTE_ARRAY(#{deptId},DEPT_PRIV) > 0
		</if>
		<if test="leaveId!=''.toString() and leaveId!=null">
			OR FUN_INTE_ARRAY(#{leaveId},LEAVE_PRIV) > 0
		</if>
		)
	</if>
</select>

</mapper>

