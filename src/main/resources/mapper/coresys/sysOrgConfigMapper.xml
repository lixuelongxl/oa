<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core136.mapper.sys.SysOrgConfigMapper">
<resultMap id="SysOrgConfig" type="com.core136.bean.sys.SysOrgConfig" >
    <id column="ID" property="id" jdbcType="BIGINT" />
    <result column="CONFIG_ID" property="configId" jdbcType="VARCHAR" />
    <result column="ORG_ADMIN" property="orgAdmin" jdbcType="VARCHAR" />
    <result column="SORT_NO" property="sortNo" jdbcType="INTEGER" />
    <result column="REMARK" property="remark" jdbcType="VARCHAR" />
    <result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
    <result column="CREATE_USEr" property="createUser" jdbcType="VARCHAR" />
    <result column="ORG_ID" property="orgId" jdbcType="VARCHAR" />
  </resultMap>
<select id="getOrgCount" resultType="Integer">
	SELECT COUNT(1) FROM SYS_ORG_CONFIG
</select>

<select id="getOrgConfigLsit" resultType="java.util.HashMap">
SELECT S.CONFIG_ID AS configId, (SELECT U.ORG_NAME FROM UNIT U WHERE U.ORG_ID=S.ORG_ID) AS unitName,
(SELECT I.USER_NAME FROM USER_INFO I WHERE I.ORG_ID=S.ORG_ID AND I.ACCOUNT_ID=S.ORG_ADMIN) AS orgAdminName,
S.CREATE_TIME AS createTime,S.ORG_ID AS orgId,S.REMARK AS remark 
FROM SYS_ORG_CONFIG S
</select>


</mapper>

